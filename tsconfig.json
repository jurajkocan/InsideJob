{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES5",
    "lib": ["es2019", "es2018", "es2017", "es2015", "es2016", "dom", "es6"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "config/*": ["config/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
